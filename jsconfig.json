{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "allowJs": true,

    "noImplicitReturns": true,

    "noEmit": false,
    "declaration": true,
    "sourceMap": true,

    "checkJs": true,
    "strict": true,

    "outDir": "dist"
  },
  "include": ["library/**/*", "index.js"],
  "exclude": ["types/**/*", "tests/**/*", "dist/**/*"]
}
